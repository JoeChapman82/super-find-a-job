{% extends "nunjucks/templates/main.njk" %}

{% block pageTitle %}My jobs{% endblock %}
{% block stylesheets %}{% endblock %}
{% block content %}

        <form action="/my-jobs" method="post">
            <div class="full-page-grid-wrapper">
                <div class="full-page-card">
                    <table class="govuk-table card-text">
                        <caption class="govuk-table__caption govuk-table__caption--l">My jobs</caption>
                        <thead class="govuk-table__head">
                          <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header">Job title</th>
                            <th scope="col" class="govuk-table__header">Employers</th>
                            <th scope="col" class="govuk-table__header">Location</th>
                            <th scope="col" class="govuk-table__header">Salary</th>
                            <th scope="col" class="govuk-table__header">Job site</th>
                          </tr>
                        </thead>
                        <tbody class="govuk-table__body">
                            {% for job in jobs %}
                                <tr class="govuk-table__row clickable-table-row"">
                                    <th scope="row" class="govuk-table__header" data-click="{{ job.title }}">{{ job.title }}</th>
                                    <td class="govuk-table__cell" data-click="{{ job.title }}">{{ job.employer }}</td>
                                    <td class="govuk-table__cell" data-click="{{ job.title }}">{{ job.location }}</td>
                                    <td class="govuk-table__cell" data-click="{{ job.title }}">{{ job.salary }}</td>
                                    <td class="govuk-table__cell" data-click="{{ job.title }}"><a class="my-jobs-link" id="{{ job.title }}" href="{{ job.href }}" target="_blank">{{ job.site }}</a></td>
                              </tr>
                            {% endfor %}
                        </tbody>
                      </table>
                </div>
            </div>

        </form>

{% endblock %}

{% block scripts %}{% endblock %}